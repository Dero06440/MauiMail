<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiMail.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiMail"
    xmlns:views="clr-namespace:MauiMail.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiMail">

    <ShellContent
        Title="Inbox"
        ContentTemplate="{DataTemplate views:InboxPage}"
        Route="InboxPage" />

    <ShellContent
        Title="Compose"
        ContentTemplate="{DataTemplate views:ComposePage}"
        Route="ComposePage" />
</Shell>
